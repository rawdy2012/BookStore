@model BookModel
@{
    ViewData["Title"] = "Add New Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4"> Add New Book</h3>
    <hr />
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Holy guacamole!</strong> You should Added Book.<br />
            Click<a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to view the details
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post">
       
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" required/>
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" required/>
            <span asp-validation-for="Author"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="Language"></label>
            <select asp-for="Language" class="form-control" required asp-items="ViewBag.AllLanguages">
               <option value="">Please choose language</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control"  required/>
            <span asp-validation-for="TotalPages"></span>
        </div>
        <br />
        <div class="form-group">
            <input asp type="submit" value="Add Book" class="btn btn-primary" />
        </div>



    </form>
</div>


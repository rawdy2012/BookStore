@model LanguageModel
@{
    ViewData["Title"] = "Add New Language";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="display-4"> Add New Language</h3>
    <hr />
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Holy guacamole!</strong> You should Added Book.<br />
            Click<a asp-controller="Book" asp-action="GetLanguage" asp-route-id="@ViewBag.LanguageId">here</a> to view the details
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post">

        <div class="form-group">
            <label asp-for="LanguageValue"></label>
            <input asp-for="LanguageValue" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="LanguageName"></label>
            <input asp-for="LanguageName" class="form-control" required />
        </div> 
        <br />
        <div class="form-group">
            <input asp type="submit" value="Add Language" class="btn btn-primary" />
        </div> 
    </form>
</div>

@model IEnumerable<BookModel>


<div class="container">
    <h3>All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <div class="card mb-3 shadow-sm">
                    @*<svg class="bg-placeholder-img card-img-top" width="100%" height="125"></svg>*@
                    <img src="~/images/b4.jpg" class="card-img-top" width="100%" height="125" >
                    <div class="card-body">
                        <h5>@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/getbook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>
